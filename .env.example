# ===== ODIADEV TTS Gateway (.env) =====
FLASK_ENV=production
SECRET_KEY=change-me
KEY_PEPPER=please-change-this
ADMIN_BEARER=please-set-in-prod
ALLOWED_ORIGINS=http://localhost:5000
DATABASE_URL=sqlite:///./odiadev_tts.sqlite3

# Auth & limits
DEFAULT_RATE_LIMIT_PER_MIN=120
DEFAULT_TOTAL_QUOTA=0
REQUIRE_KEY_FOR_SPEAK=1

# Dev help (beep if Render fails)
DEV_FALLBACK_AUDIO=1

# Render TTS settings (edit if your path/body differs)
ODIA_TTS_URL=https://odia-tts-render.onrender.com/speak
ODIA_TTS_METHOD=GET         # GET or POST
ODIA_TTS_BODY=json          # json or form (only applies to POST)
ODIA_TTS_TEXT_PARAM=text
ODIA_TTS_VOICE_PARAM=voice

# Optional: use OpenAI for /agent. Leave blank to echo.
OPENAI_API_KEY=
